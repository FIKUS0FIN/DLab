#cloud-config
repo_update: true
repo_upgrade: all

packages:
 - docker.io
 - git

runcmd:
 - ssh-keyscan git.epam.com >> /home/ubuntu/.ssh/known_hosts
 - chown ubuntu:ubuntu /home/ubuntu/.ssh/known_hosts
 - adduser ubuntu docker
 - bash -c "while [ ! -f /home/ubuntu/.ssh/id_rsa.pub ]; do sleep 1m; done"
 - su - ubuntu -c "git clone git@git.epam.com:epmc-bdcc/data-lab.git"
 - mkdir -p /etc/docker/certs.d/docker.epmc-bdcc.projects.epam.com
 - curl -fsSL http://cert.epam.com/3-EPAM_root_2020.cer | tee /etc/docker/certs.d/docker.epmc-bdcc.projects.epam.com/ca.crt
